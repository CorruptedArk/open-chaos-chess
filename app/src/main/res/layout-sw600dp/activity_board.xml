<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:id="@+id/board_layout"
    tools:context="dev.corruptedark.chaoschess.Board"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:clipChildren="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_over_bruh"
        android:textStyle="bold"
        android:textSize="35sp"
        android:id="@+id/game_over_label"
        android:layout_marginBottom="84dp"
        android:visibility="invisible"
        android:layout_above="@+id/lost_label"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFFFF"
        android:background="#3c3c3c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_lost"
        android:textStyle="bold"
        android:textSize="35sp"
        android:id="@+id/lost_label"
        android:visibility="invisible"
        android:textColor="#FFFFFFFF"
        android:background="#3c3c3c"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_won"
        android:textStyle="bold"
        android:textSize="35sp"
        android:id="@+id/won_label"
        android:visibility="invisible"
        android:textColor="#FFFFFFFF"
        android:background="#3c3c3c"
        android:layout_alignBaseline="@+id/lost_label"
        android:layout_alignBottom="@+id/lost_label"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:text="@string/player_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_points"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/that_sucks_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="@string/computer_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/computer_points"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/player_points"
        android:layout_alignBottom="@+id/player_points"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noice"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/noice_label"
        android:visibility="invisible"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/that_sucks"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/that_sucks_label"
        android:visibility="invisible"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_your_turn_stupid"
        android:textStyle="bold"
        android:textSize="35sp"
        android:id="@+id/not_your_turn_label"
        android:visibility="invisible"
        android:textColor="#FFFFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cant_move_that_bruh"
        android:id="@+id/cant_move_that_label"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="#FFFFFFFF"
        android:layout_above="@+id/not_your_turn_label"
        android:layout_alignRight="@+id/won_label"
        android:layout_alignEnd="@+id/won_label" />
    <TextView
        android:text="@string/tied_bro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/won_label"
        android:layout_centerHorizontal="true"
        android:id="@+id/tie_label"
        android:textSize="35sp"
        android:textColor="#FFFFFFFF"
        android:background="#3c3c3c"
        android:visibility="invisible"/>

</RelativeLayout>
